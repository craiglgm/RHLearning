## Practice code from Programming the Raspberry Pi, 2nd Ed. by Simon Monk
## 4.4 Hangman

import random

# List of words to choose from
words = ['chicken', 'dog', 'cat', 'mouse', 'frog'] 
lives_remaining = 10 #number of misses before you are hung
display_word = '' # string to show while guessing
guesses = '' # list of guessed letters

def pick_a_word():
	# pick the word for this round
	return random.choice(words)
def word_with_blanks(word):
	# substitute blanks for letters and fill in the correct letters.
	for idx in word:
		display_word = word.replace(idx,'-')
	print(word) 
def get_guess(word):
	# prompt player for their guess
	print('Lives remaining: ' + str(lives_remaining))
	word_with_blanks(word)
	guess = input('Guess a letter or the whole word:')
	return guess
def process_guess(guess, word):
	# determine if guess is correct
	global lives_remaining
	lives_remaining -= 1
	return False
def play():
	# the base logic of the game.
	word = pick_a_word()
	while True:
		guess = get_guess(word)
		if process_guess(guess, word):
			print('Congrats! You win!')
			break
		if lives_remaining == 0:
			print('Sorry, you lose. Please play again!')
			print('The word was ' + word)
			break
print("Let's play Hangman!")
play()